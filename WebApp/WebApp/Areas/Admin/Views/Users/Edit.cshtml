
@model Domain.Entities.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <h2>Thông tin nhân viên</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(x => x.Password)
                @Html.HiddenFor(x => x.Age)
                @Html.HiddenFor(x => x.CreatedBy)
                @Html.HiddenFor(x => x.UpdatedBy)
                @Html.HiddenFor(x => x.Status)
                @Html.HiddenFor(x => x.IsDeleted)
                @Html.HiddenFor(x => x.UpdatedDate)
                <div class="form-group">
                    @Html.Label("Tài khoản", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Địa chỉ", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Số điện thoại", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Chức vụ", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-2">
                        @Html.DropDownList("RoleId",null,
                    "Tùy chọn", new  { @class = "form-control"} )
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Ngày vào", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.DisplayFor(x => x.CreatedDate, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Cập nhật" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>
