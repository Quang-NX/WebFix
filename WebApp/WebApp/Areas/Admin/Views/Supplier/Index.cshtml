@model IEnumerable<WebApp.Areas.Admin.Models.ViewModels.SupplierViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}
<div class="container-fluid danhmuc">
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Sản phẩm", "Index", "Product")</li>
            <li>@Html.ActionLink("Nhà sản xuất", "Index", "Manufacture")</li>
            <li>@Html.ActionLink("Nhà cung cấp", "Index", "Supplier")</li>
        </ul>
    </div>
</div>
<br />
<h2>NHÀ CUNG CẤP</h2>
<p>
    <button class="btn btn-success addProduct" style="font-size:17px;">
        @Html.ActionLink("Thêm mới", "Create")
    </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>Chức năng</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            <button class="btn btn-success">@Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id })</button>
            <button class="btn btn-default">@Html.ActionLink("Chi tiết", "Details", new { id = item.Id })</button>
            <button class="btn btn-danger">@Html.ActionLink("Xóa", "Delete", new { id = item.Id })</button>
        </td>
    </tr>
}

</table>
